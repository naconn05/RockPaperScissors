<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".First_Selection"
    android:gravity="center">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageRock"
            android:src="@drawable/rock"
        android:layout_alignRight="@+id/imagescissors"
        android:layout_alignEnd="@+id/imagescissors"
        android:layout_alignLeft="@+id/imagepaper"
        android:layout_alignStart="@+id/imagepaper" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagepaper"
            android:layout_below="@id/imageRock"
            android:src="@drawable/paper"
            />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagescissors"
        android:layout_below="@id/imagepaper"
        android:src="@drawable/scissors"
        android:layout_alignRight="@+id/imagepaper"
        android:layout_alignEnd="@+id/imagepaper" />



</RelativeLayout>
